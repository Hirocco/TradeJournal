@model IEnumerable<TradeJournal.Models.Journal>

@{
    ViewData["Title"] = "Index";
}

<h1>Journals</h1>

<p>
    <a asp-action="AddOrEdit">Create New</a>
</p>
<table class="table text-bold text-white">
    <thead>
        <!--Nagłówki-->
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Trade)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <!--Wypisywanie poprzez iteracje po BD-->
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trade.Id)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.Id">Add Or Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>

