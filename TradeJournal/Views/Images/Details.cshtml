@model List<TradeJournal.Models.Image>

<div>
    <hr />
    <div class="col-lg-12 control-section default-carousel-section">
        <div class="e-sample-resize-container carousel-sample">
            <ejs-carousel id="defaultCarousel" autoPlay="false" cssClass="default-carousel">
                <e-carousel-items>
                    @for (int i = 0; i < ViewBag.ImagesContent.Count; i++)
                    {
                        <e-carousel-item template="#image@i"></e-carousel-item>
                    }
                </e-carousel-items>
            </ejs-carousel>
        </div>
    </div>
    <hr />
    @if (Model != null)
    {
        System.Diagnostics.Debug.WriteLine("Journal is not null, rendering partial view.");
        await Html.RenderPartialAsync("~/Views/Images/AddImage.cshtml", this.Model);
    }
</div>

@for (int i = 0; i < ViewBag.ImagesContent.Count; i++)
{
    <script id="image@(i)" type="text/x-template">
        <figure class="img-container">
            <img class="w-100 h-100" src="@ViewBag.ImagesContent[i]" alt="@ViewBag.ImagesTitles[i]" />
            <figcaption class="img-caption">@ViewBag.ImagesTitles[i]</figcaption>
        </figure>
    </script>
}



<style>
    .default-carousel-section .carousel-sample {
        margin: 0 auto 2em;
        width: 75%;
        height: 75%;
    }

    .default-carousel .e-carousel-items .e-carousel-item .img-container {
        height: 100%;
    }

    .default-carousel .e-carousel-items .e-carousel-item .img-caption {
        bottom: 4em;
        color: #fff;
        font-size: 12pt;
        height: 2em;
        position: relative;
        padding: 0.3em 1em;
        text-align: center;
        width: 100%;
    }
</style>

